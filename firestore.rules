rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Journal entries: public read, admin-only write
    match /journals/{journalId} {
      allow read: if true;
      allow write: if request.auth != null
                   && request.auth.token.email == 'whyiswhen@gmail.com';
    }
  }
}
